<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start</th>
      <th>End</th>
      <th>Timezone</th>
      <th>Location</th>
      <th>Overview</th>
      <th>Link</th>
      <th>Contact info</th>
      <th>Category</th>
      <th>Price</th>
      <th>User</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.start %></td>
        <td><%= event.end %></td>
        <td><%= event.timezone %></td>
        <td><%= event.location %></td>
        <td><%= event.overview %></td>
        <td><%= event.link %></td>
        <td><%= event.contact_info %></td>
        <td><%= event.category %></td>
        <td><%= event.price %></td>
        <td><%= event.user %></td>
        <td><%= event.state %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

